# Kafka Producer Configuration Example
# Copy this file to .env and fill in your actual values

# ==================================================
# REQUIRED: Kafka Cluster Configuration
# ==================================================

# Confluent Cloud Kafka bootstrap servers (required)
# Example: pkc-xxxxx.region.provider.confluent.cloud:9092
KAFKA_BOOTSTRAP_SERVERS=your-kafka-bootstrap-servers

# Confluent Cloud API credentials (required)
# Get these from Confluent Cloud Console > API Keys
KAFKA_API_KEY=your-kafka-api-key
KAFKA_API_SECRET=your-kafka-api-secret

# Target Kafka topic name (required)
# The topic must exist or auto-creation must be enabled
KAFKA_TOPIC=your-topic-name

# ==================================================
# OPTIONAL: Kafka Producer Tuning
# ==================================================

# Connection timeout for Kafka operations (default: 30s)
KAFKA_TIMEOUT=30s

# Maximum number of retry attempts (default: 3)
KAFKA_RETRY_MAX=3

# Required acknowledgments from Kafka brokers (default: 1)
# -1 = WaitForAll (most reliable), 0 = NoResponse (fastest), 1 = WaitForLocal (balanced)
KAFKA_REQUIRED_ACKS=1

# Message compression algorithm (default: snappy)
# Options: none, gzip, snappy, lz4, zstd
KAFKA_COMPRESSION=snappy

# Batch size for message batching (default: 100)
KAFKA_BATCH_SIZE=100

# ==================================================
# OPTIONAL: Schema Registry Configuration
# ==================================================

# Confluent Cloud Schema Registry URL (required for schema tasks)
# Example: https://psrc-xxxxx.region.provider.confluent.cloud
SCHEMA_REGISTRY_URL=your-schema-registry-url

# Schema Registry API credentials (required when using Schema Registry)
SCHEMA_REGISTRY_API_KEY=your-sr-api-key
SCHEMA_REGISTRY_API_SECRET=your-sr-api-secret

# ==================================================
# OPTIONAL: Application Configuration
# ==================================================

# Logging level (default: info)
# Options: debug, info, warn, error
LOG_LEVEL=info

# Interval between generated messages (default: 1s)
# Used in continuous producer mode
MESSAGE_INTERVAL=1s

# Enable application metrics collection (default: false)
ENABLE_METRICS=false